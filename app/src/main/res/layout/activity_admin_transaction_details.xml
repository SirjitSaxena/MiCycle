<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AdminTransactionDetails">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Transaction ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction ID:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/transac_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>
                </LinearLayout>

                <!-- Cycle Info Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CYCLE INFO"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="16dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="4"
                    android:layout_marginBottom="24dp">

                    <!-- Registration Number -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registration Number:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/reg_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Model -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Color -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Location -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Rating -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/cycle_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                </GridLayout>

                <!-- User Info Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USER INFO"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="16dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="4"
                    android:layout_marginBottom="24dp">

                    <!-- Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Mobile -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email ID:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Address -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/hall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Rating -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/user_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                </GridLayout>

                <!-- Owner Info Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OWNER INFO"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="16dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="4"
                    android:layout_marginBottom="24dp">

                    <!-- Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/owner_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Mobile -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/owner_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email ID:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/owner_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Address -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/owner_hall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Rating -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/owner_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                </GridLayout>

                <!-- Billing Info Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BILLING INFO"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="16dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="4">

                    <!-- Start Date -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/st_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- End Date -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Price -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- No. of Days -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. of Days:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                    <!-- Total Amount -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount:"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:id="@+id/amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:typeface="serif"
                        android:textColor="@color/color1"/>

                </GridLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>